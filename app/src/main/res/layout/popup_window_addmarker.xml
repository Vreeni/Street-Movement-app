<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    android:weightSum="5"
    android:background="@color/grey_100"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:weightSum="6">

        <TextView
            android:id="@+id/test"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:layout_marginLeft="8dp"
            android:textSize="20sp"
            android:gravity="center_vertical"
            android:textStyle="bold"
            android:textColor="#58C1E8"
            android:text="Suggest a new training location" />

        <Button
            android:id="@+id/btn_cancelAddMarker"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="x"
            android:textSize="16sp"
            android:textAlignment="center"
            android:backgroundTint="@color/grey_100" />
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1pt"
        android:layout_margin="8dp"
        android:background="#58C1E8">

    </View>

    <EditText
        android:id="@+id/et_toBeApprovedLocation_name"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:hint="Suggest a name for this location"/>

    <EditText
        android:id="@+id/et_toBeApprovedLocation_description"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:textSize="14sp"
        android:hint="Shortly describe what you can do here"/>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/iv_toBeApprovedLocation_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginLeft="8dp"
            android:visibility="gone"/>

        <Button
            android:id="@+id/btn_selectImage"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            android:text="+"
            android:textSize="35sp"
            android:textAlignment="center"
            android:backgroundTint="@color/grey_100"/>

    </LinearLayout>


    <Button
                android:id="@+id/btn_submitForApproval"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="bottom"
                android:backgroundTint="@color/colorPrimaryDark"
                android:text="Submit for review" />


</LinearLayout>

