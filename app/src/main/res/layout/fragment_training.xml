<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="2pt"
    android:orientation="vertical">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Training" />


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/IMGchooseWorkout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:adjustViewBounds="true"
                android:contentDescription="chooseWorkout"
                android:paddingTop="0dp"
                android:src="@drawable/bg_choosechallenge"
                app:srcCompat="@drawable/bg_choosechallenge" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:gravity="center"
                android:text="Choose Workout"
                android:textSize="20dp"
                android:textStyle="italic"/>

            <Button
                android:id="@+id/fragment_train_now_create_workout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:background="@color/colorPrimaryDark"
                android:elevation="10dp"
                android:backgroundTint="@color/colorPrimaryDark"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                 android:layout_gravity="center"
                 android:text="Workout" />

            <Button
                android:id="@+id/movementChallenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"
                android:text="Movement specific challenge *" />

            <Button
                android:id="@+id/smChallenge"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:background="@color/colorPrimaryDark"

                android:text="Street Movement Challenge *" />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                android:textStyle="italic"
                android:textSize="12dp"
                android:layout_gravity="end"
                android:textAlignment="textEnd"
                android:text="* Not available yet"/>


        </LinearLayout>

    </ScrollView>

</LinearLayout>